<div class="media"> 
  <div class="media-body">
    <h3>
    <% @items.each do |item| %>
      <small>
      <% if policy(item).edit? %>
        <%= link_to "", edit_item_path(item), class: 'glyphicon glyphicon-pencil' %>
      <% end %>
      <% if policy(item).destroy? %>
      | <%= link_to "", [item], method: :delete, remote: true, class: 'glyphicon glyphicon-ok' %> |
      <% end %>
      </small>
      <%= item.name %>   
      </br>
      </br>
      <% end %>
      </h3>
    </div>
</div>
